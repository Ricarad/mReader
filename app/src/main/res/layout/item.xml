<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_iv_bookimg"
        android:layout_width="126dp"
        android:layout_height="136dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/book_default"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="111dp"
        android:maxEms="6"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="奥古斯都之路只穿是指说"
        android:textSize="17dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_iv_bookimg"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/item_iv_bookimg"
        app:layout_constraintTop_toTopOf="@+id/item_iv_bookimg"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>